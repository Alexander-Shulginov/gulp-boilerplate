- var faviconPath = "./icons/favicon/";

-
    var favicon = {
        disabled: false,
        appleTouchIcon180x180: `${faviconPath}apple-touch-icon.png`,
        icon16x16: `${faviconPath}favicon-32x32.png`,
        icon32x32: `${faviconPath}favicon-16x16.png`,
        iconSvg: { 
            disabled: true, // <-- Modern svg favicon
            path:`${faviconPath}favicon.svg`,
        },
        manifest: `${faviconPath}site.webmanifest`,
        maskIcon: {
            path: `${faviconPath}safari-pinned-tab.svg`,
            color: "#5bbad5"
        },
        msApp: "#00aba9",
        themeColor: "#ffffff"
    }

if !favicon.disabled

    if favicon.appleTouchIcon180x180 
        link(rel="apple-touch-icon", sizes="180x180", href=favicon.appleTouchIcon180x180)

    if favicon.icon32x32
        link(rel="icon", type="image/png", sizes="32x32", href=favicon.icon32x32)

    if favicon.icon16x16 
        link(rel="icon", type="image/png", sizes="16x16", href=favicon.icon16x16)

    if !favicon.iconSvg.disabled
        link(rel="icon", type="image/svg+xml", href=favicon.iconSvg.path)

    if favicon.manifest 
        link(rel="manifest", href=favicon.manifest)

    if favicon.maskIcon.color
        link(rel="mask-icon", href=favicon.maskIcon.path, color=favicon.maskIcon.color)

    if favicon.msApp 
        meta(name="msapplication-TileColor", content=favicon.msApp)

    if favicon.themeColor
        meta(name="theme-color", content=favicon.themeColor)
