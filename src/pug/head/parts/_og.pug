if !og.disabled

    if og.title 
        meta(property="og:title", content=og.title)

    if og.type 
        meta(property="og:type", content=og.type) 

    if og.img.url 
        meta(property="og:image", content=og.img.url) 

    if og.img.alt 
        meta(property="og:image:alt", content=og.img.alt) 

