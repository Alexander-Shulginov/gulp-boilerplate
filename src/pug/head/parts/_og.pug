        meta(property="og:image:width", content=og.img.width) 

    if og.img.height 
        meta(property="og:image:height", content=og.img.height) 

    if og.url 
        meta(property="og:url", content=og.url) 

    if og.descr 
        meta(property="og:description", content=og.descr) 

